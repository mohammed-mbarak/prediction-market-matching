# ================================
# Environment Example File
# ================================
# Copy this file to:
#   .env.development  (for local dev)
#   .env.production   (for production)
# ================================

# Backend build target
# dev  -> uvicorn --reload
# prod -> uvicorn with multiple workers
BACKEND_BUILD_TARGET=dev

# Frontend API base URL
# In Docker + nginx this MUST be /api
VITE_API_BASE_URL=/api

# Ports
# Frontend (nginx)
FRONTEND_PORT=80

# Vite dev server (only used in dev)
VITE_DEV_PORT=5173
